  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Origin</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @characters.each do |character| %>
      <tr>
        <td><%= character.first_name %></td>
        <td><%= character.last_name %></td>
        <td><%= character.origin %></td>
        <td><%= link_to "Show", character %></td>
        <td><%= link_to "Edit", edit_character_path(character) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to "New character", new_character_path, class: "btn btn-secondary" %>
